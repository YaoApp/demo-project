{
  "action": {
    "bind": {
      "model": "purchase_order_stock",
      "option": {
        "withs": { "user": {}, "project": {}, "company": {} }
      }
    },
    "before:save": "scripts.purchase.StockBeforeSave"
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            {
              "width": 12,
              "name": "项目名称"
            },
            {
              "name": "采购订单",
              "width": 12
            },
            {
              "name": "入库日期",
              "width": 12
            },
            {
              "name": "审核人员",
              "width": 12
            },

            {
              "name": "备注",
              "width": 24
            },
            {
              "name": "物料表",
              "width": 24
            },
            {
              "name": "状态",
              "width": 8
            },
            {
              "name": "本次入库总量",
              "width": 8
            },

            {
              "name": "本次总金额",
              "width": 8
            }
          ]
        }
      ],
      "props": {}
    },
    "primary": "id",
    "operation": {
      "preset": {
        "save": {
          "back": true
        },
        "back": {}
      },
      "actions": [
        {
          "confirm": {
            "title": "提示",
            "desc": "确认删除，删除后数据无法恢复？"
          },
          "title": "删除",
          "icon": "icon-trash-2",
          "action": {
            "Form.delete": {
              "pathname": "/x/Table/purchase.purchase_order_stock"
            }
          },
          "style": "danger"
        }
      ]
    }
  },
  "fields": {
    "form": {
      "项目名称": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.project.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        },

        "bind": "project_id"
      },
      "采购订单": {
        "view": {
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.purchase.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        },

        "bind": "purchase_order_id"
      },
      "审核人员": {
        "bind": "user_id",
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "disabled": true,
            "xProps": {
              "$remote": {
                "process": "scripts.contact.user.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        }
      },

      "入库日期": {
        "edit": {
          "type": "DatePicker",
          "bind": "order_date",
          "props": {}
        },
        "bind": "order_date",
        "view": {
          "props": {
            "format": "YYYY-MM-DD"
          },
          "type": "Text"
        }
      },

      "本次入库总量": {
        "edit": {
          "props": {
            "type": "number",
            "disabled": true
          },
          "type": "Input",
          "bind": "total_number"
        },
        "bind": "total_number",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "本次总金额": {
        "edit": {
          "props": {
            "disabled": true,
            "type": "number"
          },
          "type": "Input",
          "bind": "total_money"
        },
        "bind": "total_money",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "备注": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {},
          "type": "TextArea",
          "bind": "remark"
        },
        "bind": "remark"
      },

      "状态": {
        "edit": {
          "props": {
            "disabled": true,
            "options": [
              {
                "labe": "::已申请",
                "value": "已申请"
              },
              {
                "labe": "::已通过",
                "value": "已通过"
              },
              {
                "labe": "::未通过",
                "value": "未通过"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "status",
        "view": {
          "type": "Text",
          "props": {}
        }
      },

      "物料表": {
        "bind": "material_data",
        "edit": {
          "type": "DynamicList",
          "props": {
            "setting": "setting/material_stock"
          }
        }
      }
    }
  },
  "name": "采购"
}
