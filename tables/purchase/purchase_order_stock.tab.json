{
  "name": "采购",
  "action": {
    "bind": {
      "model": "purchase_order_stock",
      "option": {
        "withs": { "user": {}, "project": {}, "purchase_order": {} }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "审核人员",
          "width": 4
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": {
            "Common.historyPush": {
              "pathname": "/x/Form/purchase.purchase_order_stock/0/edit"
            }
          },
          "title": "添加"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "width": 200,
          "name": "项目名称"
        },
        {
          "name": "采购订单号",
          "width": 250
        },
        {
          "name": "审核人员",
          "width": 150
        },
        {
          "name": "入库日期",
          "width": 150
        },
        {
          "name": "本次入库总量",
          "width": 150
        },
        {
          "name": "本次总金额",
          "width": 150
        },
        {
          "name": "状态",
          "width": 150
        },
        {
          "name": "备注",
          "width": 150
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "title": "审核",
            "icon": "icon-check",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "child.purchase_order_stock"
                }
              }
            }
          },
          {
            "action": {
              "Common.openModal": {
                "width": 640,
                "Form": {
                  "type": "view",
                  "model": "purchase.purchase_order_stock"
                }
              }
            },
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "purchase.purchase_order_stock"
                }
              }
            }
          },
          {
            "icon": "icon-trash-2",
            "action": {
              "Table.delete": {}
            },
            "style": "danger",
            "confirm": {
              "title": "提示",
              "desc": "确认删除，删除后数据无法恢复？"
            },
            "title": "删除"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "审核人员": {
        "bind": "where.user_id.eq",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.contact.user.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        }
      }
    },
    "table": {
      "项目名称": {
        "view": {
          "props": {},
          "type": "Text"
        },

        "bind": "project.name"
      },
      "采购订单号": {
        "view": {
          "props": {},
          "type": "Text"
        },

        "bind": "purchase_order.order_sn"
      },
      "审核人员": {
        "bind": "user_id",
        "view": {
          "bind": "user.name",
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.contact.user.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        }
      },
      "入库日期": {
        "edit": {
          "type": "DatePicker",
          "bind": "order_date",
          "props": {}
        },
        "bind": "order_date",
        "view": {
          "props": {
            "format": "YYYY-MM-DD"
          },
          "type": "Text"
        }
      },
      "本次入库总量": {
        "bind": "total_number",
        "view": {
          "props": {},
          "type": "Text"
        }
      },

      "本次总金额": {
        "bind": "total_money",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "备注": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "remark"
        },
        "bind": "remark"
      },

      "状态": {
        "edit": {
          "props": {
            "options": [
              {
                "labe": "::已申请",
                "value": "已申请"
              },
              {
                "labe": "::已通过",
                "value": "已通过"
              },
              {
                "labe": "::未通过",
                "value": "未通过"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "status",
        "view": {
          "type": "Text",
          "props": {}
        }
      }
    }
  }
}
