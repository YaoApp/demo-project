{
  "name": "项目进度",
  "action": {
    "bind": {
      "model": "progress",
      "option": {
        "withs": { "contract": {} }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": {
      "preset": {},
      "actions": []
    },
    "filter": {
      "columns": [
        {
          "name": "工程名称",
          "width": 4
        }
      ],
      "actions": [
        {
          "icon": "icon-plus",
          "width": 3,
          "action": {
            "Common.openModal": {
              "width": 640,
              "Form": {
                "type": "edit",
                "model": "progress"
              }
            }
          },
          "title": "添加"
        }
      ]
    },
    "table": {
      "columns": [
        {
          "name": "工程名称"
        },
        {
          "name": "进度%"
        },
        {
          "name": "完成度%"
        },
        {
          "name": "状态"
        },
        {
          "name": "备注"
        }
      ],
      "operation": {
        "fold": false,
        "actions": [
          {
            "action": {
              "Common.historyPush": {
                "pathname": "/x/Form/child.plan/{{contract_id}}/view"
              }
            },

            "title": "项目计划",
            "icon": "icon-navigation"
          },
          {
            "action": {
              "Common.openModal": {
                "width": 640,
                "Form": {
                  "type": "view",
                  "model": "progress"
                }
              }
            },
            "title": "查看",
            "icon": "icon-eye"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": {
              "Common.openModal": {
                "Form": {
                  "type": "edit",
                  "model": "progress"
                }
              }
            }
          },
          {
            "icon": "icon-trash-2",
            "action": {
              "Table.delete": {}
            },
            "style": "danger",
            "confirm": {
              "title": "提示",
              "desc": "确认删除，删除后数据无法恢复？"
            },
            "title": "删除"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "工程名称": {
        "bind": "where.contract_id.eq",
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.project.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        }
      }
    },
    "table": {
      "工程名称": {
        "view": {
          "bind": "contract.name",
          "props": {},
          "type": "Text"
        },
        "edit": {
          "props": {
            "xProps": {
              "$remote": {
                "process": "scripts.project.GetSelect",
                "query": {}
              }
            }
          },
          "type": "Select"
        },
        "bind": "contract_id"
      },

      "进度%": {
        "edit": {
          "props": {
            "type": "number"
          },
          "type": "Input",
          "bind": "progress"
        },
        "bind": "progress",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "完成度%": {
        "edit": {
          "props": {
            "type": "number"
          },
          "type": "Input",
          "bind": "complete"
        },
        "bind": "complete",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "状态": {
        "edit": {
          "props": {
            "options": [
              {
                "labe": "::进行中",
                "value": "进行中"
              },
              {
                "labe": "::已完工",
                "value": "已完工"
              },
              {
                "labe": "::已验收",
                "value": "已验收"
              }
            ],
            "placeholder": "请选择"
          },
          "type": "Select"
        },
        "bind": "status",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "备注": {
        "edit": {
          "props": {},
          "type": "Input",
          "bind": "remark"
        },
        "bind": "remark",
        "view": {
          "props": {},
          "type": "Text"
        }
      }
    }
  }
}
